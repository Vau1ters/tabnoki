{
  "manifest_version": 2,
  "name": "Tabnoki",
  "version": "0.0.1",

  "description": "All tabs with you",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "タブノキ"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "author": "✨ 💪🌚🍤 ✨",
  "permissions": ["tabs"],
  "version_name": "v0.0.1",
  "content_security_policy": "script-src 'self' 'sha256-UrhI+nVU4L7z+GtiQ5InhjqAyFjVKfgnXKiluNA9DqM='; object-src 'self'"
}
